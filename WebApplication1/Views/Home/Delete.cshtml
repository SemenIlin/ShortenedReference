@model ShortenedReferenceCommon.Model.ReferenceInfo

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reference Info</h4>
    <hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayName("Long reference")
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.LongReference)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayName("Short reference")
		</dt>
		<dd class="col-sm-10">
			@Html.Label($"https://localhost:44339/Home/Ref?id={Model.ShortenedReference}")
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayName("Created data")
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CreatedData)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayName("Amount clicks")
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CreatedData)
		</dd>

	</dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">To main</a>
    </form>
</div>